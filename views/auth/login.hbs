<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}
            <h1>ВОЙТИ</h1>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <input id="email" name="email" type="text" class="validate" required>
                    <label for="email">email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="text" class="validate" required>
                    <label for="password">Parol</label>
                    <span class="helper-text" data-error="Enter parol"></span>
                </div>
                <!--add token -->
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <!--end token-->
                <p><a href="/auth/reset">Забыли пароль?</a></p>
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Войти
                </button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{#if registrError}}
            <p class="alert">{{registrError}}</p>
            {{/if}}
            <h1>РЕГИСТРАЦИЯ</h1>
            <form action="/auth/register" method="post" novalidate>
                <div class="input-field">
                    <input id="remail" name="email" type="text" class="validate" required>
                    <label for="remail">email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" name="password" type="text" class="validate" required>
                    <label for="rpassword">Parol</label>
                    <span class="helper-text" data-error="Enter parol"></span>
                </div>
                <div class="input-field">
                    <input id="confirm" name="confirm" type="text" class="validate" required>
                    <label for="confirm">Parol</label>
                    <span class="helper-text" data-error="Repiad parol"></span>
                </div>
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="confirm">Name</label>
                    <span class="helper-text" data-error="Enter name"></span>
                </div>
                <!--add token -->
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <!--end token-->
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Registration
                </button>
            </form>
        </div>
    </div>
</div>